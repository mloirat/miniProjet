doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/css/style.css')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous")
    body
        div(class="mynavbar")
            nav(class="navbar navbar-light bg-light justify-content-between")
                span(class="navbar-brand mb-0 h1") Mon ordonnanceur ISEN
                if user
                    form.form-inline(method='POST' action="/logout")
                        span.mr-3 #{user.firstname} #{user.lastname}
                        button(class="btn btn-primary" type="submit") Déconnexion

        div
            div.row
                nav.col-sm-2.sidebar-nav(id="menu")
                    a.nav-link(href='/home') Accueil
                    hr
                    a.nav-link(href='/reservations') Gérer mes réservations
                    hr
                    a.nav-link(href='/reservations/new') Faire une réservation
                    hr
                    a.nav-link(href='/reservations/calendar/global') Calendrier global des ressources
                    hr
                    a.nav-link(href='/ressources') Vérifier la diponibilité des ressources
                    hr
                    a.nav-link(href='/users') Rechercher un utilisateur
                    if(user.administrator==="1")
                        hr
                        a.nav-link(href='/ressources/new') Ajouter une nouvelle ressource
                        hr
                        a.nav-link(href='/ressources/delete') Supprimer une ressource
                        hr
                        a.nav-link(href='/users/register') Ajouter un compte
                        hr
                        a.nav-link(href='/users/delete') Supprimer un compte
                        hr
                        a.nav-link(href='/architectures/new') Ajouter une nouvelle architecture
                        hr
                        a.nav-link(href='/architectures/delete') Supprimer une architecture
                div.col-sm-10
                    h1= title
                    hr
                    block content
